<Window x:Class="wordGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wordGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Content="Игра в слова" Grid.Row="0" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="40"/>

        <Label x:Name="lblMainWord" Grid.Row="1" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="18"/>

        <Label x:Name="lblNumberOfAttemps" Grid.Row="2" FontSize="16"
               HorizontalAlignment="Center"/>

        <TextBox x:Name="tbxWordInput" Grid.Row="3" Width="200" Height="50"
                 FontSize="16" VerticalAlignment="Center"/>

        <Button x:Name="btnCheckWord" Content="Проверить вхождение буквы"
                Grid.Row="4" FontSize="17" Margin="200 20"
                Click="BtnCheckWord_Click"/>
    </Grid>
</Window>
