<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Module_06.Resources">

    <ControlTemplate x:Key="btnTemplate">
        <Border BorderThickness="1">
            <Border.BorderBrush>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Rectangle StrokeDashArray="5"
                                    Stroke="Black"
                                    StrokeThickness="2"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.BorderBrush>
            <Button Background="Aquamarine" BorderThickness="0" Content="Button"
                    Padding="10 5"></Button>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="labelTemplate">
        <Border BorderThickness="1" BorderBrush="Green" Padding="10 5">
            <ContentControl Content="label"></ContentControl>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="textBoxTemplate">
        <Border BorderThickness="1" BorderBrush="Black" Padding="12 7" CornerRadius="5">
            <ContentControl Content="text box"></ContentControl>
        </Border>
    </ControlTemplate>

</ResourceDictionary>