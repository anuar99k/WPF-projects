<Page x:Class="Module_03__tests_app_.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Module_03__tests_app_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <StackPanel HorizontalAlignment="Center"
          VerticalAlignment="Center" x:Name="spWrapper">

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Логин: " FontSize="16"
                   Margin="0 0 10 0"/>
            <TextBox x:Name="tbxLogin"
                     FontSize="16" MinWidth="150"
                     Text="{Binding Path=Login}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Пароль: " FontSize="16"/>
            <TextBox x:Name="tbxPassword"
                     FontSize="16" MinWidth="150"
                     Text="{Binding Path=Password}"/>
        </StackPanel>

        <Button Content="Зарегистрироваться" FontSize="16"
                Margin="0 10 0 0" Width="180"
                Padding="3" x:Name="btnRegister"
                Click="BtnRegister_Click"
                IsDefault="True"/>

    </StackPanel>
</Page>
