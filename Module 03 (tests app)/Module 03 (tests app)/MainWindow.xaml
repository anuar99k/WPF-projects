<Window x:Class="Module_03__tests_app_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module_03__tests_app_"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="600">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" VerticalAlignment="Center">
            <MenuItem Header="Меню" FontSize="14" Padding="10 0"
                      x:Name="miMainMenu">
                <MenuItem Header="Войти" x:Name="btnLogin"
                          Click="BtnLogin_Click"/>
                <MenuItem Header="Зарегистрироваться" x:Name="btnRegister"
                          Click="BtnRegister_Click"/>
            </MenuItem>
        </Menu>

        <Frame Grid.Row="1" HorizontalAlignment="Center" 
               NavigationUIVisibility="Hidden"
               VerticalAlignment="Center" x:Name="mainFrame"></Frame>
    </Grid>
</Window>
